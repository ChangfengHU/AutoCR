        <!-- <projectService serviceImplementation="com.vyibc.autocr.indexing.ProjectIndexingService"/> -->
        <!-- <projectService serviceImplementation="com.vyibc.autocr.neo4j.Neo4jService"/> -->
        
        <!-- Tool Windows - 暂时注释掉可能有依赖问题的窗口 -->
